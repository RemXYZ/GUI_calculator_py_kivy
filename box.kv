<MyLayout>
    BoxLayout:
        size: root.width, root.height
        #orientation: "horizontal"
        orientation: "vertical"

        padding: 50
        spacing: 20

        Button:
            text: "Hello World!"

        Button:
            text:"Goodbye World!"

        RoundedButton:
            text: "I'm Hungry!"
            pos_hint: {'center_x': 0.5}
            size_hint:(0.2,1)
            #width: 100
            #height: 50


<RoundedButton@Button>
    background_color: (0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: (48/255, 84/255, 150/255,1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [20]