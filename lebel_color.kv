<Button>
    font_size:32


<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        padding: 10
        spacing: 10

        Label:
            text: "Name"
            background_color: (182/255, 66/255, 12/255,1)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
            color: (244/255,155/255,155/255,1)
            bold: True
            italic: True
            outline_color: (0,0,0)
            outline_width: 2

        TextInput:
            multiline: True

        Button:
            text: "Submit"

        Button:
            text: "Clear"