<MyGridLayout>
    name:name
    pizza:pizza

    GridLayout:
        cols: 1
        size: root.width, root.height
        GridLayout:
            cols: 2

            Label:
                text: "Name"
            TextInput:
                id: name
                multiline:True

            Label:
                text: "Favorite Pizza"
            TextInput:
                id: pizza
                multiline:True

        Button:
            text: "Sumbit"
            font_size: 32
            on_press: root.press()